<div id = "<%= email.object %>_<%= email.body %>">
<%= email.object%>
<br>
<% if email.read == false %>
    <%= link_to "#{email.body}", email_path(email.id), remote: true%>
<% elsif email.read == true %>
    <%= link_to "<span class = 'text-secondary'>#{email.body}</span>".html_safe, email_path(email.id), remote: true%>
<% end %>
<hr>
</div>